@model IEnumerable<E_Invoice_system.Models.invoices>

<div class="card">
    <div class="card-header" style="justify-content: space-between; align-items: center;">
        <div class="card-title">All Invoices</div>
        <a asp-action="Create" class="btn-primary">
            <i class="ph-file-plus"></i> Create New Invoice
        </a>
    </div>
    
    <div style="overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse; margin-top: 1rem;">
            <thead>
                <tr style="text-align: left; border-bottom: 2px solid var(--border);">
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem; width: 180px;">Invoice #</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem;">Customer</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem; width: 140px;">Date</th>
@using System.Text.Json
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem; width: 25%;">Product/Service</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem; width: 15%;">Total Amount</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem; width: 120px;">Status</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem; text-align: right; width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-bottom: 1px solid var(--border); transition: background 0.2s;" onmouseover="this.style.background='#f9fafb'" onmouseout="this.style.background='transparent'">
                        <td style="padding: 1rem 0.5rem; font-weight: 600;">#@(item.invoice_no ?? item.id.ToString())</td>
                        <td style="padding: 1rem 0.5rem;">@item.customer_name</td>
                        <td style="padding: 1rem 0.5rem;">@item.date.ToString("MMM dd, yyyy")</td>
                        <td style="padding: 1rem 0.5rem;">
                            @{
                                var displayName = item.prod_name_service;
                                try {
                                    if (!string.IsNullOrEmpty(displayName) && displayName.Trim().StartsWith("["))
                                    {
                                        var items = JsonSerializer.Deserialize<List<Dictionary<string, object>>>(displayName);
                                        if (items != null && items.Any())
                                        {
                                            var names = items.Select(i => i.ContainsKey("name") ? i["name"].ToString() : "").Where(n => !string.IsNullOrEmpty(n));
                                            displayName = string.Join(", ", names);
                                            // Truncate if too long
                                            if (displayName.Length > 50) displayName = displayName.Substring(0, 47) + "...";
                                        }
                                    }
                                } catch {}
                            }
                            @displayName
                        </td>
                        <td style="padding: 1rem 0.5rem; font-weight: 700;">$@(item.total_price.ToString("N2"))</td>

                        <td style="padding: 1rem 0.5rem;">
                            @{
                                var statusColor = item.status == "Paid" ? "#10b981" : (item.status == "Pending" ? "#ea580c" : "#6b7280");
                                var statusBg = item.status == "Paid" ? "#ecfdf5" : (item.status == "Pending" ? "#fff7ed" : "#f3f4f6");
                            }
                            <span style="background: @statusBg; color: @statusColor; padding: 0.25rem 0.75rem; border-radius: 20px; font-size: 0.75rem; font-weight: 600;">
                                @(item.status ?? "Draft")
                            </span>
                        </td>
                        <td style="padding: 1rem 0.5rem; text-align: right;">
                            <div style="display: flex; gap: 0.5rem; justify-content: flex-end;">
                                <a asp-action="Details" asp-route-id="@item.id" class="btn-primary" style="padding: 0.4rem 0.8rem; background: #f3f4f6; color: var(--text); border: 1px solid var(--border); font-size: 0.8rem;">
                                    <i class="ph-eye"></i> View
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.id" method="post" onsubmit="return confirm('Are you sure you want to delete this invoice?')">
                                    <button type="submit" class="btn-primary" style="padding: 0.4rem 0.8rem; background: #fee2e2; color: #ef4444; border: 1px solid #fecaca; font-size: 0.8rem;">
                                        <i class="ph-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" style="padding: 3rem; text-align: center; color: var(--text-muted);">
                            <i class="ph-file-text" style="font-size: 2rem; display: block; margin-bottom: 1rem; opacity: 0.5;"></i>
                            No invoices found. Click "Create New Invoice" to start.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
