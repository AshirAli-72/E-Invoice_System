@model E_Invoice_system.Models.customers

<div class="form-group">
    <label asp-for="name" class="form-label">Full Name</label>
    <input asp-for="name" id="newCustName" class="form-control" placeholder="Enter customer's full name" required />
    <span asp-validation-for="name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="contact" class="form-label">Contact Number</label>
    <input asp-for="contact" id="newCustContact" class="form-control" placeholder="Enter contact number" />
    <span asp-validation-for="contact" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="email" class="form-label">Email Address</label>
    <input asp-for="email" id="newCustEmail" type="email" class="form-control" placeholder="Enter email address" />
    <span asp-validation-for="email" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="address" class="form-label">Address</label>
    <textarea asp-for="address" id="newCustAddress" class="form-control" rows="3" placeholder="Enter physical address"></textarea>
    <span asp-validation-for="address" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="status" class="form-label">Status</label>
    <select asp-for="status" id="newCustStatus" class="form-control">
        <option value="Active">Active</option>
        <option value="Inactive">Inactive</option>
    </select>
</div>
