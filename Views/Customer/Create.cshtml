@model E_Invoice_system.Models.customers

<div class="dashboard-panel">
    <div class="page-header">
        <h1 class="page-title-large">
            Add New Customer
        </h1>
        <a asp-action="Index" class="btn-secondary">
            <i class="ph-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="form-wrapper form-layout-left-wide">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <!-- Combined Information -->
            <div class="form-section">
                <div class="form-section-header">
                    <h3 class="form-section-title">
                        <i class="ph-users form-icon-primary"></i>
                        Customer Information
                    </h3>
                </div>
                
                @await Html.PartialAsync("_CustomerFormPartial")
            </div>

            <div class="form-actions-sticky">
                <a asp-action="Index" class="btn-secondary">
                    Cancel
                </a>
                <button type="submit" class="btn-primary">
                    <i class="ph-check"></i>
                    Save Customer
                </button>
            </div>
        </form>
    </div>
</div>
