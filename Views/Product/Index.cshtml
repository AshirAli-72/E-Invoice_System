    @model IEnumerable<E_Invoice_system.Models.ProductService>

<div class="card">
    <div class="card-header" style="justify-content: space-between; align-items: center;">
        <div class="card-title">Manage Products & Services</div>
        <a asp-action="Create" class="btn-primary">
            <i class="ph-plus-circle"></i> Add New Products/Services
        </a>
    </div>
    
    <div style="overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse; margin-top: 1rem;">
            <thead>
                <tr style="text-align: left; border-bottom: 2px solid var(--border);">
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem; width: 60px;">ID</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem;">Item/Service Name</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem; width: 120px;">Qty/Unit</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem; width: 120px;">Price</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem; width: 100px;">Discount</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem; width: 120px;">Status</th>
                    <th style="padding: 1rem 0.5rem; color: var(--text-muted); font-size: 0.8rem; text-align: right; width: 100px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-bottom: 1px solid var(--border); transition: background 0.2s;" onmouseover="this.style.background='#f9fafb'" onmouseout="this.style.background='transparent'">
                        <td style="padding: 1rem 0.5rem; font-weight: 600;">#@item.id</td>
                        <td style="padding: 1rem 0.5rem; font-weight: 500;">@item.prod_name_service</td>
                        <td style="padding: 1rem 0.5rem;">@item.qty_unit_type</td>
                        <td style="padding: 1rem 0.5rem; font-weight: 700;">$@item.price.ToString("F2")</td>
                        <td style="padding: 1rem 0.5rem; color: #ef4444;">@item.discount.ToString("F2")</td>
                        <td style="padding: 1rem 0.5rem;">
                            <span style="background: @(item.status == "Available" ? "#ecfdf5" : "#fef2f2"); color: @(item.status == "Available" ? "#10b981" : "#ef4444"); padding: 0.25rem 0.75rem; border-radius: 20px; font-size: 0.75rem; font-weight: 600;">
                                @(item.status ?? "N/A")
                            </span>
                        </td>
                        <td style="padding: 1rem 0.5rem; text-align: right;">
                            <div style="display: flex; gap: 0.5rem; justify-content: flex-end;">
                                <a asp-action="Edit" asp-route-id="@item.id" class="btn-primary" style="padding: 0.4rem 0.8rem; background: #f3f4f6; color: var(--text); border: 1px solid var(--border); font-size: 0.8rem;">
                                    <i class="ph-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?')">
                                    <button type="submit" class="btn-primary" style="padding: 0.4rem 0.8rem; background: #fee2e2; color: #ef4444; border: 1px solid #fecaca; font-size: 0.8rem;">
                                        <i class="ph-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" style="padding: 3rem; text-align: center; color: var(--text-muted);">
                            <i class="ph-package" style="font-size: 2rem; display: block; margin-bottom: 1rem; opacity: 0.5;"></i>
                            No products found. Click "Add New Product" to get started.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
