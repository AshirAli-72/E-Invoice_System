@model E_Invoice_system.Models.ProductService

<div class="card" style="max-width: 100%; margin: 0 auto;">
    <div class="card-header">
        <div class="card-title">Edit Product #@Model.id</div>
    </div>
    
    <form asp-action="Edit" method="post" style="padding: 1rem;">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="id" />
        <input type="hidden" asp-for="date" />

        <div style="margin-bottom: 1.5rem;">
            <label style="display: block; font-size: 0.8rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.5rem;">Item/Service Name</label>
            <input asp-for="prod_name_service" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none;" placeholder="e.g. Laptop Repair, Web Design" required />
            <span asp-validation-for="prod_name_service" style="color: #ef4444; font-size: 0.75rem;"></span>
        </div>

        <div style="margin-bottom: 1.5rem;">
            <label style="display: block; font-size: 0.8rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.5rem;">Quantity / Unit Type</label>
            <input asp-for="qty_unit_type" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none;" placeholder="e.g. 1 Unit, 5 Hours" />
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1.5rem;">
            <div>
                <label style="display: block; font-size: 0.8rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.5rem;">Price ($)</label>
                <input asp-for="price" type="number" step="0.01" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none;" required />
            </div>
            <div>
                <label style="display: block; font-size: 0.8rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.5rem;">Discount ($)</label>
                <input asp-for="discount" type="number" step="0.01" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none;" />
            </div>
        </div>

        <div style="margin-bottom: 1.5rem;">
            <label style="display: block; font-size: 0.8rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.5rem;">Tax (%)</label>
            <input asp-for="tax" type="number" step="0.01" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none;" />
        </div>

        <div style="margin-bottom: 1.5rem;">
            <label style="display: block; font-size: 0.8rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.5rem;">Expiry Date</label>
            <input asp-for="expiry_date" type="date" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none;" />
        </div>

        <div style="margin-bottom: 1.5rem;">
            <label style="display: block; font-size: 0.8rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.5rem;">Description</label>
            <textarea asp-for="description" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none; resize: vertical;" rows="2"></textarea>
        </div>

        <div style="margin-bottom: 2rem;">
            <label style="display: block; font-size: 0.8rem; font-weight: 600; color: var(--text-muted); margin-bottom: 0.5rem;">Status</label>
            <select asp-for="status" style="width: 100%; padding: 0.8rem; border-radius: 8px; border: 1px solid var(--border); outline: none; background: white;">
                <option value="Available">Available</option>
                <option value="Out of Stock">Out of Stock</option>
                <option value="Discontinued">Discontinued</option>
            </select>
        </div>

        <div style="display: flex; gap: 1rem;">
            <button type="submit" class="btn-primary" style="flex: 1; justify-content: center;">Update Product</button>
            <a asp-action="Index" class="btn-primary" style="flex: 1; justify-content: center; background: #fff; color: var(--text); border: 1px solid var(--border);">Cancel</a>
        </div>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const qtyInput = document.querySelector('input[name="qty_unit_type"]');
        const priceInput = document.querySelector('input[name="price"]');
        const discountInput = document.querySelector('input[name="discount"]');
        const statusSelect = document.querySelector('select[name="status"]');

        // Function to check if quantity is 0
        function checkQuantity() {
            const qtyValue = qtyInput.value.trim();
            // Check if quantity starts with 0 or is just "0"
            const isZeroQty = qtyValue === '0' || qtyValue.startsWith('0 ');
            
            if (isZeroQty) {
                priceInput.value = '0';
                discountInput.value = '0';
                statusSelect.value = 'Out of Stock';
                
                // Disable price and discount inputs when qty is 0
                priceInput.disabled = true;
                discountInput.disabled = true;
            } else {
                // Enable inputs when qty is not 0
                priceInput.disabled = false;
                discountInput.disabled = false;
            }
        }

        // Function to validate discount
        function validateDiscount() {
            const price = parseFloat(priceInput.value) || 0;
            const discount = parseFloat(discountInput.value) || 0;
            
            if (discount > price) {
                alert('Discount cannot be greater than the price!');
                discountInput.value = '0';
            }
        }

        // Add event listeners
        qtyInput.addEventListener('input', checkQuantity);
        qtyInput.addEventListener('blur', checkQuantity);
        
        discountInput.addEventListener('blur', validateDiscount);
        priceInput.addEventListener('blur', validateDiscount);

        // Form submission validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const price = parseFloat(priceInput.value) || 0;
            const discount = parseFloat(discountInput.value) || 0;
            
            if (discount > price) {
                e.preventDefault();
                alert('Discount cannot be greater than the price!');
                discountInput.focus();
                return false;
            }

            // Re-enable disabled fields before submission so values are sent
            priceInput.disabled = false;
            discountInput.disabled = false;
        });

        // Initial check on page load
        checkQuantity();
    });
</script>
