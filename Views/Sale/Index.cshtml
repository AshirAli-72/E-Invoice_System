@model IEnumerable<E_Invoice_system.Models.Sale>
<div class="page-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
    <div>
        <h2 style="margin: 0; font-size: 1.5rem; font-weight: 700;">Sales Transactions</h2>
        <p style="margin: 0.5rem 0 0 0; color: var(--text-muted);">Manage and track your business sales</p>
    </div>
    <a asp-action="Create" class="btn-primary">
        <i class="ph-plus-circle"></i> New Sale
    </a>
</div>

<div class="card" style="padding: 0; overflow: hidden; border: none; box-shadow: var(--shadow); border-radius: 12px;">
    <div style="overflow-x: auto;">
        <table style="width: 100%; border-collapse: collapse; min-width: 1000px;">
            <thead>
                <tr style="background: #f8fafc; border-bottom: 1px solid var(--border);">
                    <th style="padding: 1.25rem 1rem; text-align: left; font-size: 0.8rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase; letter-spacing: 0.025em;">Date</th>
                    <th style="padding: 1.25rem 1rem; text-align: left; font-size: 0.8rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase;">Product / Service</th>
                    <th style="padding: 1.25rem 1rem; text-align: left; font-size: 0.8rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase;">Buyer Name</th>
                    <th style="padding: 1.25rem 1rem; text-align: left; font-size: 0.8rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase;">Qty / Unit</th>
                    <th style="padding: 1.25rem 1rem; text-align: left; font-size: 0.8rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase;">Price</th>
                    <th style="padding: 1.25rem 1rem; text-align: left; font-size: 0.8rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase;">Expiry Date</th>
                    <th style="padding: 1.25rem 1rem; text-align: left; font-size: 0.8rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase;">Total Amount</th>
                    <th style="padding: 1.25rem 1rem; text-align: center; font-size: 0.8rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase;">Method</th>
                    <th style="padding: 1.25rem 1rem; text-align: center; font-size: 0.8rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase;">Status</th>
                    <th style="padding: 1.25rem 1rem; text-align: center; font-size: 0.8rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var sale in Model)
                    {
                        <tr style="border-bottom: 1px solid var(--border); transition: background 0.2s;" onmouseover="this.style.background='#fcfcfc'" onmouseout="this.style.background='transparent'">
                            <td style="padding: 1rem;">
                                <div style="font-weight: 600; font-size: 0.9rem;">@sale.date.ToString("MMM dd, yyyy")</div>
                                <div style="font-size: 0.75rem; color: var(--text-muted);">@sale.date.ToString("hh:mm tt")</div>
                            </td>
                            <td style="padding: 1rem;">
                                <div style="font-weight: 600; color: var(--text);">@sale.prod_name_service</div>
                            </td>
                            <td style="padding: 1rem; color: var(--text-muted);">@sale.buyer_name</td>
                            <td style="padding: 1rem;">
                                <span style="background: var(--bg-light); padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.85rem; font-weight: 500;">
                                    @sale.qty_unit_type
                                </span>
                            </td>
                            <td style="padding: 1rem; color: var(--text-muted);">$@sale.price.ToString("N2")</td>
                            <td style="padding: 1rem; color: var(--text-muted);">@(sale.expiry_date?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                            <td style="padding: 1rem;">
                                <span style="font-weight: 700; color: var(--primary); font-size: 1rem;">$@sale.total_price.ToString("N2")</span>
                                @if(sale.discount > 0) {
                                    <div style="font-size: 0.7rem; color: #10b981;">Saved $@sale.discount.ToString("N2")</div>
                                }
                            </td>
                            <td style="padding: 1rem; text-align: center;">
                                @sale.payment_method
                            </td>
                            <td style="padding: 1rem; text-align: center;">
                                <span style="padding: 0.25rem 0.75rem; background: #e0f2fe; color: #0369a1; border-radius: 20px; font-size: 0.75rem; font-weight: 600;">
                                    @sale.status
                                </span>
                            </td>
                            <td style="padding: 1rem;">
                                <div style="display: flex; gap: 0.5rem; justify-content: center;">
                                    <a asp-action="Edit" asp-route-id="@sale.id" class="btn-icon" title="Edit">
                                        <i class="ph-pencil-simple"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@sale.id" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this sale record?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-icon" style="color: #ef4444;" title="Delete">
                                            <i class="ph-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" style="padding: 3rem; text-align: center; color: var(--text-muted);">
                            <i class="ph-shopping-cart" style="font-size: 3rem; opacity: 0.2; display: block; margin: 0 auto 1rem;"></i>
                            No sales records found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

