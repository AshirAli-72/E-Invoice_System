@model IEnumerable<E_Invoice_system.Models.Sale>
<div class="page-header card-header-flex" style="margin-bottom: 2rem;">
    <div>
        <h2 style="margin: 0; font-size: 1.5rem; font-weight: 700;">Sales Transactions</h2>
        <p class="text-muted" style="margin: 0.5rem 0 0 0;">Manage and track your business sales</p>
    </div>
    <a asp-action="Create" class="btn-primary">
        <i class="ph-plus-circle"></i> New Sale
    </a>
</div>

<div class="card" style="padding: 0; overflow: hidden; border: none; box-shadow: var(--shadow); border-radius: 12px;">
    <div class="table-responsive">
        <table class="styled-table" style="min-width: 1000px;">
            <thead>
                <tr style="background: #f8fafc;">
                    <th style="text-transform: uppercase; letter-spacing: 0.025em;">Date</th>
                    <th style="text-transform: uppercase;">Product / Service</th>
                    <th style="text-transform: uppercase;">Customer Name</th>
                    <th style="text-transform: uppercase;">Qty / Unit</th>
                    <th style="text-transform: uppercase;">Price</th>
                    <th style="text-transform: uppercase;">Expiry Date</th>
                    <th style="text-transform: uppercase;">Total Amount</th>
                    <th style="text-align: center; text-transform: uppercase;">Method</th>
                    <th style="text-align: center; text-transform: uppercase;">Status</th>
                    <th style="text-align: center; text-transform: uppercase;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var sale in Model)
                    {
                        <tr onmouseover="this.style.background='#fcfcfc'" onmouseout="this.style.background='transparent'">
                            <td>
                                <div class="font-bold" style="font-size: 0.9rem;">@sale.date.ToString("MMM dd, yyyy")</div>
                                <div class="text-muted" style="font-size: 0.75rem;">@sale.date.ToString("hh:mm tt")</div>
                            </td>
                            <td>
                                <div class="font-bold" style="color: var(--text);">@sale.prod_name_service</div>
                            </td>
                            <td class="text-muted">@sale.customer_name</td>
                            <td>
                                <span style="background: var(--bg-light); padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.85rem; font-weight: 500;">
                                    @sale.qty_unit_type
                                </span>
                            </td>
                            <td class="text-muted">$@sale.price.ToString("N2")</td>
                            <td class="text-muted">@(sale.expiry_date?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                            <td>
                                <span style="font-weight: 700; color: var(--primary); font-size: 1rem;">$@sale.total_price.ToString("N2")</span>
                                @if(sale.discount > 0) {
                                    <div style="font-size: 0.7rem; color: #10b981;">Saved $@sale.discount.ToString("N2")</div>
                                }
                            </td>
                            <td style="text-align: center;">
                                @sale.payment_method
                            </td>
                            <td style="text-align: center;">
                                <span class="status-badge" style="background: #e0f2fe; color: #0369a1;">
                                    @sale.status
                                </span>
                            </td>
                            <td>
                                <div class="actions-container" style="justify-content: center;">
                                    <a asp-action="Edit" asp-route-id="@sale.id" class="btn-icon btn-edit" title="Edit">
                                        <i class="ph-pencil-simple"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@sale.id" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this sale record?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-icon btn-delete" title="Delete">
                                            <i class="ph-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10" class="empty-state">
                            <i class="ph-shopping-cart empty-state-icon" style="opacity: 0.2; margin: 0 auto 1rem;"></i>
                            No sales records found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

