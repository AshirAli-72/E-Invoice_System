<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sale Terminal</title>
    
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Phosphor Icons -->
    <script src="https://unpkg.com/phosphor-icons"></script>
    
    <link rel="stylesheet" href="~/css/app-base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sale.css" asp-append-version="true" />
    
    <style>
        :root {
            --primary: #BC1823; /* Dashboard Red */
            --primary-light: #ffebed;
            --primary-dark: #9c141d;
            --primary-glow: rgba(188, 24, 35, 0.1);
            --bg-app: #f1f5f9;
            --sidebar-bg: #ffffff;
            --surface: #ffffff;
            --surface-hover: #f8fafc;
            --border: rgba(0, 0, 0, 0.04);
            --text-main: #1C2120;
            --text-muted: #64748b;
        }

        body {
            margin: 0;
            padding: 0;
            background-color: var(--bg-app);
            color: var(--text-main);
            font-family: 'Inter', sans-serif;
            overflow: hidden;
            height: 100vh;
        }

        .sale-layout-container {
            display: flex;
            height: 100vh;
            width: 100vw;
            background: #f4f7fa;
            overflow: hidden;
        }


        /* Actual Dashboard Sidebar Styling - Fixed Width match */
        .sidebar {
            width: 260px;
            background-color: var(--sidebar-bg);
            border-right: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100vh;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 2.5rem 1.5rem;
            display: flex;
            justify-content: center; /* Center logo */
            align-items: center;
        }

        .sidebar-logo {
            height: 48px; /* Increased size for impact as per pic */
            width: auto;
        }

        .sidebar-nav {
            flex: 1;
            padding: 0 1.25rem;
            margin-top: 1rem;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 1.25rem;
            padding: 0.85rem 1.25rem;
            color: #475569; /* Bluish grey for inactive */
            text-decoration: none;
            border-radius: 12px;
            margin-bottom: 0.5rem;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.2s ease;
        }

        .nav-icon {
            font-size: 1.4rem;
            color: #64748b;
        }

        .nav-item:hover {
            background-color: #f1f5f9;
            color: var(--primary);
        }

        .sale-main-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            background: #f4f7fa;
        }


        /* Top Bar - Sleeker match to SupaPOS */
        .top-bar {
            height: 60px;
            background: white;
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 32px;
            flex-shrink: 0;
            position: relative;
            z-index: 1100;
        }

        .top-bar-left {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .top-bar-logo {
            height: 32px;
            width: auto;
            transition: height 0.2s;
        }

        @media (max-width: 768px) {
            .top-bar-logo {
                height: 24px;
            }
        }

        .welcome-msg {
            font-weight: 800;
            font-size: 1.1rem;
            color: var(--text-main);
        }

        .top-bar-right {
            display: flex;
            align-items: center;
            gap: 24px;
        }

        .live-clock {
            font-weight: 700;
            color: var(--text-main);
            font-size: 0.95rem;
        }

        .top-bar-center {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
            position: relative;
        }

        .user-avatar-initial {
            width: 40px;
            height: 40px;
            background: var(--primary);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 1rem;
            box-shadow: 0 4px 10px rgba(188, 24, 35, 0.2);
            transition: transform 0.2s;
        }

        .user-avatar-initial:hover {
            transform: scale(1.05);
        }

        /* Profile Dropdown */
        .profile-dropdown {
            position: absolute;
            top: calc(100% + 12px);
            right: 0;
            width: 240px;
            background: white;
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 16px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            display: none;
            z-index: 2000;
            animation: slideDown 0.3s ease;
        }

        .profile-dropdown.show {
            display: block;
        }

        @@keyframes slideDown {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .dropdown-email {
            font-size: 0.85rem;
            font-weight: 600;
            color: var(--text-main);
            margin-bottom: 12px;
            word-break: break-all;
        }

        .dropdown-divider {
            height: 1px;
            background: #f1f5f9;
            margin: 12px 0;
        }

        .btn-logout {
            display: flex;
            align-items: center;
            gap: 10px;
            width: 100%;
            padding: 10px;
            border: none;
            background: #fef2f2;
            color: #ef4444;
            border-radius: 10px;
            font-weight: 700;
            font-size: 0.85rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-logout:hover {
            background: #fee2e2;
        }

        .sale-content-body {
            flex: 1;
            overflow: hidden;
        }

        /* CONSOLIDATED MOBILE OVERRIDES */
        @@media (max-width: 1024px) {
            body {
                overflow-y: auto !important;
                height: auto !important;
            }

            .sale-layout-container {
                display: block;
                height: auto;
                overflow: visible;
                width: 100%;
            }

            .sidebar {
                display: none;
            }

            .sale-main-wrapper {
                height: auto;
                overflow: visible;
                display: block;
            }

            .top-bar {
                height: auto;
                min-height: 60px;
                padding: 12px 20px;
                flex-wrap: wrap;
                gap: 12px;
                justify-content: space-between;
                align-items: center;
            }

            .top-bar-left {
                width: auto;
                order: 1;
            }

            .top-bar-right {
                width: auto;
                order: 2;
            }

            .top-bar-center {
                position: relative;
                left: 0;
                transform: none;
                width: 100%;
                order: 3;
                text-align: left;
                padding: 8px 0;
                border-top: 1px solid var(--border);
            }

            .sale-content-body {
                height: auto;
                overflow: visible;
            }
        }

        @@media (max-width: 480px) {
            .top-bar {
                padding: 10px 16px;
            }
            .welcome-msg {
                display: none; /* Hide on very small screens to save space */
            }
            .top-bar-left {
                gap: 8px !important;
            }
        }

        #toast-container {
            position: fixed;
            top: 24px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 10000;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .toast {
            background: white;
            border: 1px solid var(--border);
            padding: 16px 24px;
            border-radius: 50px;
            display: flex;
            align-items: center;
            gap: 12px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
            transform: translateY(-100px);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .toast.show {
            transform: translateY(60px);
        }
    </style>
</head>
<body>
    <div class="sale-layout-container">
        <!-- Main Content Area (Now Full Width) -->
        <div class="sale-main-wrapper">
            <header class="top-bar">

                <div class="top-bar-left">
                    <img src="/images/sata-logo.png" alt="SATA" class="top-bar-logo" />
                    <span class="welcome-msg">Welcome back!</span>
                </div>

                <div class="top-bar-center">
                    <span id="liveClock" class="live-clock">Wednesday, July 2, 2025 - 15:55:16</span>
                </div>

                <div class="top-bar-right">
                    <div class="user-profile">
                        @{
                            var userEmail = Context.Session.GetString("UserEmail") ?? "User";
                            var initial = userEmail.Length > 0 ? userEmail.Substring(0, 1).ToUpper() : "U";
                        }
                        <div class="user-avatar-initial" id="profileDropdownToggle">
                            @initial
                        </div>

                        <div class="profile-dropdown" id="profileDropdown">
                            <div class="dropdown-email">@userEmail</div>
                            <div class="dropdown-divider"></div>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn-logout">
                                    <i class="ph-sign-out"></i>
                                    Logout
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </header>

            <main class="sale-content-body">
                @RenderBody()
            </main>
        </div>
    </div>

    <div id="toast-container"></div>

    <script>
        function updateClock() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                month: 'long', 
                day: 'numeric',
                year: 'numeric',
                hour: '2-digit', 
                minute: '2-digit', 
                second: '2-digit',
                hour12: false 
            };
            const clockEl = document.getElementById('liveClock');
            if (clockEl) {
                clockEl.innerText = now.toLocaleString('en-US', options).replace(',', ' -');
            }
        }
        setInterval(updateClock, 1000);
        updateClock();

        function showToast(title, message) {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.innerHTML = `
                <i class="ph-check-circle" style="color:var(--primary); font-size:1.5rem;"></i>
                <div style="flex: 1;">
                    <div style="font-weight: 700; font-size: 0.85rem;">${title}</div>
                    <div style="font-size: 0.75rem; color: var(--text-muted);">${message}</div>
                </div>
            `;
            container.appendChild(toast);
            setTimeout(() => toast.classList.add('show'), 10);
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 400);
            }, 3000);
        }

        const successMessage = '@TempData["Success"]';
        if (successMessage) showToast('Success', successMessage);

        // Profile Dropdown (matching dashboard implementation)
        const profileToggle = document.getElementById('profileDropdownToggle');
        const profileDropdown = document.getElementById('profileDropdown');

        if (profileToggle && profileDropdown) {
            profileToggle.addEventListener('click', (e) => {
                e.stopPropagation();
                profileDropdown.classList.toggle('show');
            });

            document.addEventListener('click', () => {
                profileDropdown.classList.remove('show');
            });

            profileDropdown.addEventListener('click', (e) => {
                e.stopPropagation();
            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
